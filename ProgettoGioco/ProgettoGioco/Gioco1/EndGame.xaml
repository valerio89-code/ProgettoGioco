                <Label FontSize="Large" FontAttributes="Bold" TextColor="Black" Text="Punteggio:" VerticalOptions="End"/>
                <Label FontSize="Large" FontAttributes="Bold" TextColor="Black" Text="0" x:Name="lbl_punteggio" VerticalOptions="End" TranslationX="110" TranslationY="1"/>


                <Button VerticalOptions="Center" HorizontalOptions="Center" Padding="107,0,107,0"
                    Text="Rigioca" FontAttributes="Bold" x:Name="btn_rigioca" TextColor="White"
                    TranslationX="95" TranslationY="-45" Clicked="btn_rigioca_Clicked" BackgroundColor="Transparent"/>
                
            <Button VerticalOptions="Center" HorizontalOptions="Center" Padding="120,0,120,0"
                    Text="Esci" FontAttributes="Bold" x:Name="btn_esci" TextColor="White"
                    TranslationY="-3" TranslationX="-87" Clicked="btn_esci_Clicked" BackgroundColor="Transparent"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
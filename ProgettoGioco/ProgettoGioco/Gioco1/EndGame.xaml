             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgettoGioco.Gioco1.EndGame">
    <ContentPage.Content>
        <StackLayout>
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                
            <Image Source="https://media.discordapp.net/attachments/847751481078841345/851042974602887178/304340-scena-subacquea-del-paesaggio-della-caverna-gratuito-vettoriale.jpg"
                    Aspect="AspectFill"/>
                
                <Image Source="https://media.discordapp.net/attachments/847751481078841345/851049752568922112/squalo1-removebg-preview.png"
                       VerticalOptions="Center" HorizontalOptions="Center" Scale="2" TranslationX="-90" TranslationY="-20"/>

                <Image Source="https://media.discordapp.net/attachments/847751481078841345/851051669218263050/pesce_indica-removebg-preview.png"
                       HorizontalOptions="Center" VerticalOptions="Center" Scale="1.1" TranslationX="145" TranslationY="15"/>

                <Image Scale="0.9" x:Name="img_win" IsVisible="false" TranslationX="0" TranslationY="150" Source="https://cdn.discordapp.com/attachments/847751481078841345/848152659956858920/JazgFgLzHnbrla4B-ON9prC_d8NRQaUvU7fO8GQwtBQIQQ5BBIHTbBGQUQNikHx6hj_7K-bTF203_K_xJZGGAH5A3OqIfYEy.png"></Image>

<Label Text="Hit: 0" x:Name="lbl_hit" />
            
<Label Text="Miss: 0" x:Name="lbl_miss"/>
            
<Label Text="Punteggio: 0" x:Name="lbl_punteggio" />
            
<Label Text="Record: 0" x:Name="lbl_record" />
